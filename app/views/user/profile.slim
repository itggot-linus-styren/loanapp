- @header = "Profile"
div class="banner"
	h2 Welcome #{user.username}
	p What would you like to do?

div class="actions"
	- if usermgr.has_permission?(user, :invite)
		div.item
			a href="/invites/new" Create an account invitation

	- if usermgr.has_permission?(user, :change)
		div
			h2.subtitle Change app lock password
			form action="/loginapp/change" method="post"
				div
					input#old_password name="change[old_password]" type="password" placeholder="Old password"
				div
					input#password name="change[password]" type="password" placeholder="Password"
				div
					input#confirm_password name="change[confirm_password]" type="password" placeholder="Confirm"
				input type="submit" value="Change"
